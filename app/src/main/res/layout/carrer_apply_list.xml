<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorTiles"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/arrow"/>

        <LinearLayout
            android:id="@+id/img_back_container"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal"
            android:shadowColor="#cecece"
            />

        <TextView
            android:id="@+id/text_view_header_name_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Swash App"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_header"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <RelativeLayout
                android:background="@drawable/banner_job"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="#fff"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="san-serif"
                        android:text="When you will join you will be introduce to the
        company its processes,tools and procedures,and you will be personally guided
        along the way in face,even while you re in the process of applying you'll be
        assigned a representation to help you throught the process."/>

                </LinearLayout>
            <LinearLayout
                android:padding="3dp"
                android:background="@color/dot_inactive"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Openings:"
                    android:fontFamily="san-serif"/>

            </LinearLayout>
            <LinearLayout
                android:padding="3dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_Pm"
                    android:layout_marginLeft="12dp"
                    android:background="@color/dot_inactive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="san-serif"
                    android:text="PM"/>
                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/textView_Android"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/dot_inactive"
                    android:layout_marginLeft="0dp"
                    android:layout_width="0dp"
                    android:layout_height="121dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="san-serif"
                    android:text="Android"/>
                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/textView_TestIng"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/dot_inactive"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="san-serif"
                    android:text="Testing Enginer"/>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
