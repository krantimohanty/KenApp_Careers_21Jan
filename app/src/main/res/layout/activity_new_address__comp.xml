<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_address__comp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.swashconvergence.apps.user.NewAddress_Comp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add New Address"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark_grey"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address Title"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatSpinner

                android:id="@+id/address_type"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:entries="@array/location_type"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address 1"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address 2"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="City"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="State"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Country"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/zip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="ZIP"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Geo Location"
                android:background="@drawable/edt_bg_selector"
                android:layout_marginTop="7dp"
                android:drawablePadding="16dp"
                android:fontFamily="san-serif"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:singleLine="true"
                android:textSize="@dimen/text_head"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/address_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="san-serif"
                android:layout_marginTop="10dp"
                android:text="Select if this is primary address"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_content" />
            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="Save"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
